@model IEnumerable<GrupoClientes.Models.Grupo>

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Controle de Grupos</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
                    <li class="breadcrumb-item active">Controle</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<div class="card card-navy" style="margin:16px; background:#F5F5F5">
    <div class="card-header">
        <h3 class="card-title">Grupos</h3>
    </div>
    <div class="card-body">
        <table class="table table-striped projects" id="tabela">
            <thead>
                <tr>
                    <th style="width: 1%">
                        #
                    </th>
                    <th style="width: 20%">
                        Descrição
                    </th>
                    <th style="width: 20%">
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            #
                        </td>
                        <td>
                            <a>
                                @Html.DisplayFor(modelItem => item.Descricao)
                            </a>
                        </td>
                        <td class="project-actions text-right">
                            <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.Id">
                                <i class="fas fa-folder">
                                </i>
                                Detalhes
                            </a>
                            <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.Id">
                                <i class="fas fa-pencil-alt">
                                </i>
                                Editar
                            </a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">
                                <i class="fas fa-trash">
                                </i>
                                Deletar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

